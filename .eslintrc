{
  "env": {
    "node": true
  },
  "rules": {
    "quotes": [2, "single"],
    "eqeqeq":                       [1, "smart"],
    "no-multiple-empty-lines":      [1, {"max": 2}],
    "semi":                         [1, "always"],
    "space-before-function-paren":  [0],
    "spaced-comment":               [0],
    "no-undef": [0],
    "no-unused-vars" : [0]
  }
}